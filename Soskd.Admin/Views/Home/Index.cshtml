                        </div>
                    </div>
                    <div class="col-md-2">
                        <h3 class="text-purple">@(ViewBag.ThisMonthNews + ViewBag.ThisMonthVacancies + ViewBag.ThisMonthDocuments + ViewBag.ThisMonthMediaAboutUs + ViewBag.ThisMonthSponsors + ViewBag.ThisMonthContactApplications)</h3>
                        <p class="text-muted mb-0">Total Items</p>
                    </div>
                </div>
            </div>
        </div>
