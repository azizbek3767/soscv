                        {
                            <div class="alert alert-warning mb-3" role="alert">
                                <i class="fas fa-handshake me-2"></i>
                                You have <strong>@ViewBag.UnpublishedSponsors</strong> unpublished sponsors.
                                <a asp-controller="Sponsors" asp-action="Index" class="alert-link">Publish them</a>
                            </div>
                        }

                        @if (ViewBag.UnpublishedDocuments != null && (int)ViewBag.UnpublishedDocuments > 0)
                        {
                            <div class="alert alert-warning mb-3" role="alert">
                                <i class="fas fa-file-pdf me-2"></i>
                                You have <strong>@ViewBag.UnpublishedDocuments</strong> unpublished documents.
                                <a asp-controller="Documents" asp-action="Index" class="alert-link">Publish them</a>
                            </div>
                        }

                        @if (ViewBag.UnpublishedMediaAboutUs != null && (int)ViewBag.UnpublishedMediaAboutUs > 0)
                        {
                            <div class="alert alert-secondary mb-3" role="alert">
                                <i class="fas fa-clock me-2"></i>
                                You have <strong>@ViewBag.UnpublishedMediaAboutUs</strong> unpublished media items.
                                <a asp-controller="MediaAboutUs" asp-action="Index" class="alert-link">Publish them</a>
                            </div>
                        }

                        @if (ViewBag.DraftVacancies != null && (int)ViewBag.DraftVacancies > 0)
                        {
                            <div class="alert alert-secondary mb-3" role="alert">
                                <i class="fas fa-file-alt me-2"></i>
                                You have <strong>@ViewBag.DraftVacancies</strong> draft vacancies.
                                <a asp-controller="Vacancies" asp-action="Index" class="alert-link">Publish them</a>
                            </div>
                        }

                        @if ((ViewBag.ExpiringThisWeek == null || (int)ViewBag.ExpiringThisWeek == 0) &&
                        (ViewBag.UnpublishedNews == null || (int)ViewBag.UnpublishedNews == 0) &&
                        (ViewBag.UnpublishedSponsors == null || (int)ViewBag.UnpublishedSponsors == 0) &&
                        (ViewBag.UnpublishedDocuments == null || (int)ViewBag.UnpublishedDocuments == 0) &&
                        (ViewBag.UnpublishedMediaAboutUs == null || (int)ViewBag.UnpublishedMediaAboutUs == 0) &&
                        (ViewBag.DraftVacancies == null || (int)ViewBag.DraftVacancies == 0))
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-check-circle fa-2x mb-2"></i>
                                <p>All systems running smoothly!<br>No urgent actions required.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Overview -->
