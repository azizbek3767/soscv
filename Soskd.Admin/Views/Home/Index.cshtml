                    <div class="card-header bg-white border-bottom">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-bell me-2 text-danger"></i>Alerts & Notifications
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.ExpiringThisWeek != null && (int)ViewBag.ExpiringThisWeek > 0)
                        {
                            <div class="alert alert-warning mb-3" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>@ViewBag.ExpiringThisWeek</strong> vacancies expiring this week!
                                <a asp-controller="Vacancies" asp-action="Index" class="alert-link">Review them</a>
                            </div>
                        }

                        @if (ViewBag.UnpublishedNews != null && (int)ViewBag.UnpublishedNews > 0)
                        {
                            <div class="alert alert-info mb-3" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                You have <strong>@ViewBag.UnpublishedNews</strong> unpublished news articles.
