<!-- Updated Soskd.Admin/Views/Shared/_Layout.cshtml - with Sponsors -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SOS Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" asp-append-version="true" />

    <!-- jQuery MUST be loaded first -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Simplified TinyMCE with basic features only -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.2/tinymce.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-primary text-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4">
                <div class="mb-2">
                    <i class="fas fa-heart fa-2x text-warning"></i>
                </div>
                <h4 class="text-white fw-bold">SOS Admin</h4>
                <small class="text-light">Children's Villages</small>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="News" asp-action="Index">
                    <i class="fas fa-newspaper me-2"></i>News Management
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Vacancies" asp-action="Index">
                    <i class="fas fa-briefcase me-2"></i>Vacancies Management
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="VacancyApplications" asp-action="Index">
                    <i class="fas fa-users me-2"></i>Job Applications
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Documents" asp-action="Index">
                    <i class="fas fa-file-pdf me-2"></i>Documents Management
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="MediaAboutUs" asp-action="Index">
                    <i class="fas fa-newspaper me-2"></i>Media About Us
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Sponsors" asp-action="Index">
                    <i class="fas fa-handshake me-2"></i>Sponsors Management
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="ContactApplications" asp-action="Index">
                    <i class="fas fa-envelope me-2"></i>Contact Applications
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Donations" asp-action="Index">
                    <i class="fas fa-heart me-2"></i>Donations Management
                </a>
                <!-- Divider -->
                <hr class="text-white-50 mx-3 my-2">

                <!-- Quick Actions -->
                <div class="px-3 py-2">
                    <small class="text-light opacity-75">QUICK ACTIONS</small>
                </div>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="News" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Add News
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Vacancies" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Post Vacancy
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Documents" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Add Document
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="MediaAboutUs" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Add Media Item
                </a>
                <a class="list-group-item list-group-item-action bg-transparent text-white border-0 sidebar-link"
                   asp-controller="Sponsors" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Add Sponsor
                </a>

                <div class="mt-auto p-3">
                    <hr class="text-white-50">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-circle fa-2x me-2"></i>
                        <div>
                            <small class="text-light">Welcome,</small>
                            <div class="fw-bold">@User.Identity.Name</div>
                        </div>
                    </div>
                    <a class="btn btn-outline-light btn-sm mt-2 w-100" asp-area="Identity" asp-page="/Account/Logout">
                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <!-- Breadcrumb Navigation -->
                    <nav aria-label="breadcrumb" class="d-none d-md-block">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                            @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                            {
                                <li class="breadcrumb-item">
                                    @if (ViewContext.RouteData.Values["controller"].ToString() == "News")
                                    {
                                        <a asp-controller="News" asp-action="Index">News</a>
                                    }
                                    else if (ViewContext.RouteData.Values["controller"].ToString() == "Vacancies")
                                    {
                                        <a asp-controller="Vacancies" asp-action="Index">Vacancies</a>
                                    }
                                    else if (ViewContext.RouteData.Values["controller"].ToString() == "Documents")
                                    {
                                        <a asp-controller="Documents" asp-action="Index">Documents</a>
                                    }
                                    else if (ViewContext.RouteData.Values["controller"].ToString() == "MediaAboutUs")
                                    {
                                        <a asp-controller="MediaAboutUs" asp-action="Index">Media About Us</a>
                                    }
                                    else if (ViewContext.RouteData.Values["controller"].ToString() == "Sponsors")
                                    {
                                        <a asp-controller="Sponsors" asp-action="Index">Sponsors</a>
                                    }
                                    else if (ViewContext.RouteData.Values["controller"].ToString() == "ContactApplications")
                                    {
                                        <a asp-controller="ContactApplications" asp-action="Index">Contact Applications</a>
                                    }
                                    else
                                    {
                                        @ViewContext.RouteData.Values["controller"]
                                    }
                                </li>
                                @if (ViewContext.RouteData.Values["action"].ToString() != "Index")
                                {
                                    <li class="breadcrumb-item active">@ViewContext.RouteData.Values["action"]</li>
                                }
                            }
                        </ol>
                    </nav>

                    <div class="navbar-nav ms-auto">
                        <!-- Quick Stats in Navbar -->
                        <div class="nav-item dropdown d-none d-lg-block">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-chart-bar me-1"></i>
                                Quick Stats
                            </a>
                            <div class="dropdown-menu dropdown-menu-end p-3" style="min-width: 250px;">
                                <h6 class="dropdown-header">Today's Overview</h6>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">News:</span>
                                    <span class="badge bg-primary">@(ViewBag.PublishedNews ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Active Vacancies:</span>
                                    <span class="badge bg-success">@(ViewBag.ActiveVacancies ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Documents:</span>
                                    <span class="badge bg-danger">@(ViewBag.PublishedDocuments ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Media Items:</span>
                                    <span class="badge bg-info">@(ViewBag.PublishedMediaAboutUs ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Sponsors:</span>
                                    <span class="badge bg-warning">@(ViewBag.PublishedSponsors ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Expiring Soon:</span>
                                    <span class="badge bg-danger">@(ViewBag.ExpiringThisWeek ?? 0)</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Contact Applications:</span>
                                    <span class="badge bg-secondary">@(ViewBag.TotalContactApplications ?? 0)</span>
                                </div>
                            </div>
                        </div>

                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                               data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg me-2"></i>
                                <span>@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid px-4 py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this item? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Admin JS with completely fixed TinyMCE -->
    <script>
        // Completely simplified TinyMCE configuration
        function initializeTinyMCE() {
            tinymce.init({
                selector: '.rich-text-editor',
                height: 300,
                menubar: false,
                // ONLY use these basic plugins that work reliably
                plugins: ['lists', 'link'],
                // Simple toolbar with only working features
                toolbar: 'undo redo | bold italic | alignleft aligncenter alignright | bullist numlist | link',
                content_style: `
                    body {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                        font-size: 14px;
                        line-height: 1.6;
                    }
                `,
                // Disable all the problematic features
                branding: false,
                promotion: false,
                // Ensure content is saved properly
                setup: function (editor) {
                    editor.on('change', function () {
                        editor.save(); // Save content back to textarea
                    });
                    editor.on('blur', function () {
                        editor.save(); // Save on blur too
                    });
                }
            });
        }

        // Initialize everything when DOM is ready
        $(document).ready(function() {
            console.log('DOM Ready - Initializing admin panel...');

            // Sidebar toggle functionality
            $('#sidebarToggle').on('click', function() {
                $('#sidebar-wrapper').toggleClass('show');
            });

            // Active navigation highlighting
            const currentPath = window.location.pathname;
            $('.sidebar-link').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });

            // Delete confirmation modal
            let deleteUrl = '';
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

            // Handle delete button clicks
            $(document).on('click', '.btn-delete', function(e) {
                e.preventDefault();
                deleteUrl = $(this).attr('href');
                deleteModal.show();
            });

            // Confirm delete action
            $('#confirmDelete').on('click', function() {
                if (deleteUrl) {
                    window.location.href = deleteUrl;
                }
            });

            // Initialize TinyMCE with delay to ensure DOM is ready
            setTimeout(function() {
                console.log('Initializing TinyMCE...');
                initializeTinyMCE();
            }, 500);

            // Auto-hide alerts
            $('.alert').delay(5000).fadeOut();

            // Add fade-in animation to cards
            $('.card').each(function(index) {
                $(this).delay(index * 100).queue(function(next) {
                    $(this).addClass('fade-in');
                    next();
                });
            });

            // Enhanced form submission handling
            $('form').on('submit', function(e) {
                console.log('Form submission started...');

                // Force TinyMCE to save content to textareas
                if (typeof tinymce !== 'undefined') {
                    tinymce.triggerSave();
                }

                // Check required fields
                let isValid = true;
                $(this).find('[required]').each(function() {
                    if (!$(this).val() || $(this).val().trim() === '') {
                        $(this).addClass('is-invalid');
                        isValid = false;
                        console.log('Required field empty:', $(this).attr('name'));
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    console.log('Form validation failed');
                    alert('Please fill in all required fields.');
                    return false;
                }

                // Show loading state
                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.html();
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Saving...').prop('disabled', true);

                console.log('Form submitted successfully');
                return true;
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Custom styles for better sidebar */
    #sidebar-wrapper {
        min-height: 100vh;
        width: 250px;
        transition: all 0.3s ease;
    }

    .sidebar-link {
        padding: 0.75rem 1rem !important;
        border-radius: 0.5rem;
        margin: 0.2rem 0.5rem;
        transition: all 0.2s ease;
    }

        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.1) !important;
            color: white !important;
            transform: translateX(5px);
        }

        .sidebar-link.active {
            background-color: rgba(255, 255, 255, 0.2) !important;
            color: white !important;
            border-left: 3px solid #ffc107;
        }

    /* Responsive sidebar */
    @@media (max-width: 768px) {
        #sidebar-wrapper {
            position: fixed;
            top: 0;
            left: -250px;
            z-index: 1050;
        }

            #sidebar-wrapper.show {
                left: 0;
            }
    }

    /* Card animations */
    .card {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
    }

        .card.fade-in {
            opacity: 1;
            transform: translateY(0);
        }
</style>













































































